<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">
    <Button
        android:id="@+id/RED"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:text="RED"
        android:textColor="#000000"
        android:background="@android:color/holo_red_dark"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ORANGE"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:text="ORANGE"
        android:textColor="#000000"
        android:background="@android:color/holo_orange_dark"
        app:layout_constraintEnd_toStartOf="@+id/YELLOW"
        app:layout_constraintHorizontal_bias="0.532"
        app:layout_constraintStart_toEndOf="@+id/RED"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/YELLOW"
        android:layout_width="120dp"
        android:layout_height="90dp"
        android:text="YELLOW"
        android:textColor="#000000"
        android:background="#ffff00"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/GREEN"
        android:layout_width="100dp"
        android:layout_height="70dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:color/holo_green_dark"
        android:text="GREEN"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/VIOLET"
        app:layout_constraintEnd_toStartOf="@+id/BLUE"
        app:layout_constraintTop_toBottomOf="@+id/ORANGE"
        app:layout_constraintVertical_bias="0.364" />

    <Button
        android:id="@+id/BLUE"
        android:layout_width="90dp"
        android:layout_height="70dp"
        android:background="@android:color/holo_blue_dark"
        android:text="BLUE"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/VIOLET"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ORANGE"
        app:layout_constraintVertical_bias="0.365" />

    <Button
        android:id="@+id/INDIGO"
        android:layout_width="110dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:background="#9932cc"
        android:text="INDIGO"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/VIOLET"
        app:layout_constraintStart_toEndOf="@+id/BLUE"
        app:layout_constraintTop_toBottomOf="@+id/ORANGE"
        app:layout_constraintVertical_bias="0.364" />

    <Button
        android:id="@+id/VIOLET"
        android:layout_width="600dp"
        android:layout_height="90dp"
        android:layout_marginBottom="4dp"
        android:background="#ffc0cb"
        android:text="VIOLET"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.996" />
</androidx.constraintlayout.widget.ConstraintLayout>
